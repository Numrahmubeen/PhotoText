<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".MainActivity">

    <ja.burhanrashid52.photoeditor.PhotoEditorView
        android:id="@+id/iv_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:photo_src="@drawable/main">

    </ja.burhanrashid52.photoeditor.PhotoEditorView>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/_30sdp"
       android:id="@+id/ll_opacity"
       android:orientation="horizontal"
       android:weightSum="10"
       android:background="#90000000"
       android:visibility="invisible"
       app:backgroundTint="@color/colorPrimary"
       app:layout_constraintBottom_toTopOf="@+id/rl_undoRedo"
       app:layout_constraintEnd_toEndOf="parent">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
           android:layout_marginLeft="@dimen/_4sdp"
           android:text="Opacity:"
           android:layout_weight="1"
           android:textSize="@dimen/_14ssp"
           android:textColor="#fff"/>
       <SeekBar
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:id="@+id/sb_Opacity"
           android:layout_weight="5"
           android:max="255"
           android:progressBackgroundTint="#fff"/>

   </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFilterView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7000"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/rl_undoRedo"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/row_filter_view" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:id="@+id/rl_undoRedo"
        android:orientation="horizontal"
        android:background="#7000"
        app:layout_constraintBottom_toTopOf="@+id/horizScrollView"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:id="@+id/btn_choose_from_gallery"
            android:layout_marginLeft="@dimen/_20sdp"
            android:src="@drawable/ic_gallery"
            android:layout_alignParentStart="true"/>
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:id="@+id/btn_camera"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_toRightOf="@+id/btn_choose_from_gallery"
            android:src="@drawable/ic_camera" />
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerInParent="true"
            android:id="@+id/iv_ChangeBackground"
            android:src="@drawable/ic_baseline_color_lens_24"/>

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:id="@+id/iv_save"
            android:src="@drawable/ic_save"
            android:layout_toLeftOf="@+id/btn_share"
            android:layout_marginRight="@dimen/_20sdp"
          />
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:id="@+id/btn_share"
            android:src="@drawable/ic_share"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>



    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="none"
        android:id="@+id/horizScrollView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/ll_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_filters_list"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_40sdp"
                android:padding="@dimen/_16sdp"
                app:cardBackgroundColor="#333639"
                app:cardElevation="@dimen/_8sdp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_photo_filter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Filters"
                        android:textAlignment="center"
                        android:textColor="#ffff"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_add_text"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_40sdp"
                android:padding="@dimen/_16sdp"
                app:cardBackgroundColor="#333639"
                app:cardElevation="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Add Text"
                        android:textAlignment="center"
                        android:textColor="#ffff"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_emoji"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_40sdp"
                android:padding="@dimen/_16sdp"
                app:cardBackgroundColor="#333639"
                app:cardElevation="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_emoji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_insert_emoticon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Emoji"
                        android:textAlignment="center"
                        android:textColor="#ffff"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_adjust"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_40sdp"
                android:padding="@dimen/_16sdp"
                app:cardBackgroundColor="#333639"
                app:cardElevation="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_adjust"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_baseline_tune_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Adjust"
                        android:textAlignment="center"
                        android:textColor="#ffff"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_control_opacity"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_40sdp"
                android:padding="@dimen/_16sdp"
                app:cardBackgroundColor="#333639"
                app:cardElevation="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_baseline_blur_on_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Opacity"
                        android:textAlignment="center"
                        android:textColor="#ffff"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </HorizontalScrollView>

